#include <iostream>
#include <vector>
using namespace std;

int findMissingNumberBinarySearch(const vector<int>& arr) 
{
    int left = 0, right = arr.size() - 1;

    while (left <= right) 
    {
        int mid = left + (right - left) / 2;

         if (arr[mid] != mid + 1) 
        {
             if (mid == 0 || arr[mid - 1] == mid) 
             {
                return mid + 1;
            }
            
            right = mid - 1;
        } 
        else 
        {
            left = mid + 1;
        }
    }
    
    return arr.size() + 1;
}

int main() 
{
    vector<int> arr = {1, 2, 3, 4, 6, 7, 8}; 
    int missing = findMissingNumberBinarySearch(arr);
    cout << "Missing number: " << missing << endl;
    return 0;
}
