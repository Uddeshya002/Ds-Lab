#include <iostream>
#include <vector>
using namespace std;

void dfs(int r, int c, vector<vector<int>>& grid, vector<vector<bool>>& vis) {
    int m = grid.size(), n = grid[0].size();
    vis[r][c] = true;

    int dr[4] = {1,-1,0,0};
    int dc[4] = {0,0,1,-1};

    for(int k = 0; k < 4; k++) {
        int nr = r + dr[k], nc = c + dc[k];
        if(nr >= 0 && nr < m && nc >= 0 && nc < n) {
            if(grid[nr][nc] == 1 && !vis[nr][nc])
                dfs(nr, nc, grid, vis);
        }
    }
}

int main() {
    int m, n;
    cin >> m >> n;

    vector<vector<int>> grid(m, vector<int>(n));
    for(int i = 0; i < m; i++)
        for(int j = 0; j < n; j++)
            cin >> grid[i][j];

    vector<vector<bool>> vis(m, vector<bool>(n, false));
    int islands = 0;

    for(int i = 0; i < m; i++) {
        for(int j = 0; j < n; j++) {
            if(grid[i][j] == 1 && !vis[i][j]) {
                islands++;
                dfs(i, j, grid, vis);
            }
        }
    }

    cout << islands;
    return 0;
}
