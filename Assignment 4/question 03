#include <iostream>
#include <queue>
using namespace std;

void interleaveQueue(queue<int> &q) {
    int size = q.size();

    // If size is odd, we can't split equally
    if (size % 2 != 0) {
        cout << "Queue size must be even to interleave!" << endl;
        return;
    }

    int halfSize = size / 2;
    queue<int> firstHalf;

    // Step 1: Move first half to another queue
    for (int i = 0; i < halfSize; i++) {
        firstHalf.push(q.front());
        q.pop();
    }

    // Step 2: Interleave elements of both queues
    while (!firstHalf.empty()) {
        q.push(firstHalf.front());
        firstHalf.pop();

        q.push(q.front());
        q.pop();
    }
}

int main() {
    queue<int> q;
    int n, val;

    cout << "Enter number of elements (even): ";
    cin >> n;

    cout << "Enter " << n << " elements: ";
    for (int i = 0; i < n; i++) {
        cin >> val;
        q.push(val);
    }

    cout << "\nOriginal Queue: ";
    {
        queue<int> temp = q;
        while (!temp.empty()) {
            cout << temp.front() << " ";
            temp.pop();
        }
    }
    cout << endl;

    interleaveQueue(q);

    cout << "Interleaved Queue: ";
    while (!q.empty()) {
        cout << q.front() << " ";
        q.pop();
    }
    cout << endl;

    return 0;
}
